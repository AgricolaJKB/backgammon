{
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "bracketSpacing": false,
    "bracketSameLine": true,
    "tabWidth": 4,
    "plugins": ["prettier-plugin-svelte"],
    "overrides": [
        {
            "files": "*.svelte",
            "options": {
                "parser": "svelte",
                "bracketSameLine": false,
                "svelteAllowShorthand": true,
                "htmlWhitespaceSensitivity": "ignore"
            }
        }
    ]
}
